
.allhot-wrap{
	width:100%;
	overflow: hidden;
	position: relative;
	height:100%;
	background: #2375f4;
	background: -webkit-gradient(linear,left bottom,left top,from(#00a2ff),to(#2a6cf2));
	background: -webkit-linear-gradient(bottom,#00a2ff,#2a6cf2);
	background: linear-gradient(0deg,#00a2ff,#2a6cf2);
}
.hot-item{
	padding:10rpx 20rpx; 
	border:1px solid #fff;
	border-radius: 30rpx;
	margin-top: 20rpx;
	text-align: center;
	color:#fff;
	margin-left:20rpx;
	width:auto;
}
.hot-wrap{
	margin:0 auto;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	font-size: 30rpx;
	color:#fff;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	padding:40rpx 0;
}
scroll-view{
	width:auto;
	padding:0 40rpx;
	height:100%;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}

