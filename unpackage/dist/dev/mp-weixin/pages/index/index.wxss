
.content{
	position: relative;
	width:100%;
	height:100%;
}
.bg-img{
	width:100%;
	height:100%;
	position: absolute;
	z-index: 10;
}
.btn-index{
	width:250rpx;
	height:100rpx;
	position: absolute;
	z-index: 100;
	top:0;
	left:0;
	text-align: center;
	line-height: 140rpx;
	color:skyblue;
}
.btn-index image{
	width:100%;
	height:100rpx;
	position: absolute;
	top:0;
	left:0;
}
.btn-index text,.wenan-second-type text{
	position: absolute;
	z-index: 10;
	top:0;
	left:0;
	bottom:0;
	right:0;
	margin:auto;
	font-size: 14px;
}
.wenan-second-type text{
	color:orange;
}
.wn{
	top:30rpx;
	left:10%;
}
.gj{
	top:150rpx;
	left:60%;
}
.wenan-second-type{
	width:250rpx;
	height:100rpx;
	position: relative;
	margin-bottom: 20rpx;
	line-height: 140rpx;
}
.wenan-second-type image{
	width:100%;
	height:100%;
	position: absolute;
	top:0;
	left:0;
}
.wenan-wrap{
	margin-top: 140rpx;
	-webkit-transition: all 0.3s linear;
	transition: all 0.3s linear;
}
.hide-wenan-type{
	opacity: 0;
}
.show-wenan-type{
	opacity: 1;
}

